    "doc_type": "lk_pmd_press_release",
    "doc_id": "2025-07-23-cdf8a3",
    "num": "cdf8a3",
    "date_str": "2025-07-23",
    "description": "President Pays Final Respects to the Late Most\u2026",
    "url_metadata": "https://pmd.gov.lk/news/president-pays-final-respects-to-the-late-most-ven-anamaduwa-sri-dhammadassi-anunayake-thero/",
    "lang": "en",
